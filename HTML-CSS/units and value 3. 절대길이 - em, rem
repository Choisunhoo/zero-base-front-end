/*
단위와 값

상대길이 - em, rem
*/


/* lem === 부모의 font-size */
/* 1rem === root의 font-size */
.parent {
    color: blue;
    font-size: 3rem;
}

.child {
    color: red;
    font-size: 1.5em;
}
