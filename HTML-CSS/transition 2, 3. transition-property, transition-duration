/*

Transition (전환)

transition-property, transition-duration
*/


.box {
    width: 300px;
    height: 80px;
    border: 2px dashed teal;
    background-color: darkslategray;
    font-size: 50px;
    color: white;

}


.box:hover {
    width: 320px;
    background-color: indianred;
    color: black;
    font-size: 60px;

    transition-property: all;
    transition-duration: 0.5s;
}
