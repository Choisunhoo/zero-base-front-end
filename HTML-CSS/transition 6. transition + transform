/*

Transition (전환)

transition + transform
*/


.box {
    width: 100px;
    height: 100px;
    border: 10px solid seagreen;
    background-color: rgb(204, 253, 225);
    border-radius: 30px;

    transition: all 3s ease-in-out;
}


.box:hover {
    transform: rotate(360deg) translateY(30px);
}
