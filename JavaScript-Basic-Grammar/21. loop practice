// 짝수의 합
// 짝수의 합을 구하는 범위를 const 변수를 통해서 저장
const UNTIL_NUM = 10; 
// 짝수의 합을 저장할 변수 생성 및 초기화
let sum = 0; 

// 반복문을 통해서 0~10 까지 1씩 더하면서 만약 i의 값이 2로 나누었을때 0과 같다면(짝수라면) 짝수의 합을 저장할 변수에 더해줌 
for (let i = 0; i <= UNTIL_NUM; i++){
   if (i % 2 == 0) sum += i; 
}

// 결과 출력 
console.log(sum); // output : 30


// 구구단

// 2중 for 문을 이용해서 범위를 지정 
for (let i = 2; i <= 9; i++) {
   for (let j = 1; j <= 9; j++) {
      // 결과를 하나씩 출력
      console.log(`${i} x ${j} = ${i * j}`);
   }
   // 2단 ~ 3단으로 혹은 3단 ~ 4단으로 한단씩 출력이 끝나면 띄어쓰기를 해줌
   console.log()
}
