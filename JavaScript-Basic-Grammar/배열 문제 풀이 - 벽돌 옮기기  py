input = [ 
         [5, 2, 4, 1, 7, 5],
         [12, 8, 10, 11, 9, 5, 8],
         [27, 14, 19, 11, 26, 25, 23, 15]
        ]



for i in range(len(input)):
    data = input[i]
    length = sum(data) // len(data)
    answer = 0
    
    for block in data:
        if block > length:
            answer += block - length 
            
    
    print(answer)
