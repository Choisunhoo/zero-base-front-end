// 숫자 
// JavaScript는 부동 소수점을 사용하고 있다 

console.log(1 === 1.00);  // output: true
console.log(Math.pow(2, 9999));  // output: Infinity
console.log(Number.MAX_SAFE_INTEGER);  // output: 9007199254740991

console.log(isNaN('1'));  // output: false


// 문자 
const word = '문자';
const word2 = "문자";
const word3 = `문자`;

console.log(word[0]); // output: 문
console.log(word[1]); // output: 문
console.log(word[2]); // output: undefined

console.log(word.length); // output: 2

const words = word + '  ' + word2 
console.log(words); // output: 문자  문자
